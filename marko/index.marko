class {
  onCreate() {
    this.state = {
      devices: [
        {
          name: 'Raspberry Pi 1',
          id: 'rpi1',
          labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
          data: [ 8,  2,  2, 44, 33, 26],
          type: 'bar',
        },
        {
          name: 'Raspberry Pi 2',
          id: 'rpi2',
          labels: ['Red', 'Blue', 'Yellow', 'Green'],
          data: [32, 11,  7,  7],
          type: 'bar',
        },
        {
          name: 'Raspberry Pi 3',
          id: 'rpi3',
          labels: ['Red', 'Blue', 'Yellow'],
          data: [ 3,  5,  2],
          type: 'doughnut',
        },
        {
          name: 'Android Device 1',
          id: 'android1',
          labels: ['Red', 'Blue'],
          data: [47, 43],
          type: 'bar',
        },
        {
          name: 'iOS Device 1',
          id: 'ios1',
          labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple'],
          data: [19, 28, 18, 21, 20],
          type: 'pie',
        },
      ],
      currentDevice: 0,
